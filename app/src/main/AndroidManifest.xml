<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaccinealerter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.VaccineAlerter">
        <activity android:name=".Activities.WalkthroughActivity"> </activity>
        <activity android:name=".Activities.InfoActivity" />
        <activity android:name=".Activities.AlertsActivity" />
        <activity android:name=".Activities.SelectAgeActivity" />
        <activity android:name=".Activities.ResultsActivity" />
        <activity android:name=".Activities.SelectDistrictActivity" />
        <activity android:name=".Activities.SelectStateActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SplashScreen" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>