<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blackish"
    tools:context="my.app.vaccinealerter.Activities.MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_light"
        android:text="Your Alerts"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="These Alerts have been saved from last Check performed."
        android:layout_below="@id/txt1"
        android:layout_marginStart="24dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <ScrollView
        android:id="@+id/view1"
        android:layout_marginTop="140dp"
        android:padding="40dp"
        android:background="@drawable/one_side_round_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/alerts_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="No Alerts Found!"
            android:textSize="18sp"
            android:textColor="@color/dark_blackish"/>

    </ScrollView>








</RelativeLayout>